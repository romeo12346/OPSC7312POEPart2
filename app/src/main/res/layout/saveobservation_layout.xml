<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nightColorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/nightColorTextPrimary"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtODate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="yyyy/mm/dd"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtOTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="hh:mm"
            android:inputType="time"
            android:textAlignment="center"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txtOLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/nightColorTextPrimary"
            android:ems="10"
            android:hint="Location"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Observation" />
    </LinearLayout>

</RelativeLayout>